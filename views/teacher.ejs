    <style>
      * {
        padding: 0;
        margin: 0;
      }
      h1 {
        text-align: center;
        margin-bottom: 20px;
      }
      table {
        border-collapse: collapse;
        width: 50%;
        margin: auto;
      }
      th {
        background-color: darkkhaki;
      }
      th,
