      }
      table tr td a {
        text-decoration: none;
      }
      table tr td a.edit {
        color: blue;
      }
      table tr td a.remove {
        color: red;
      }
      table tr td a:hover {
        text-decoration: underline;
      }
      span {
        font-weight: bold;
        color: rgb(172, 172, 172);
      }
    </style>
  </head>
